//# address-hook(0x02863e) end(0x0286e2)
function void fn02863e()
{
	D0 = u8[A4 + 2] - 1
	A3 = 0xffff7000 + D0.u16 * 640
	D3.u16 = D0.u16 * 4

	A1 = 0x028632 + D3.s16
	D3.u8 = u8[(A1+=1)-1]
	D4.u8 = u8[(A1+=1)-1]
	D5.u8 = u8[(A1+=1)-1]
	D6.u8 = u8[(A1+=1)-1]

	A1 = 0xffff1000 + u16[A4]
	D2.u16 = 0x01ff
	while (D2.s16 >= 0)
	{
		D0.u8 = u8[(A1+=1)-1]
		if (D0.u8 != 0)
		{
			D1.u8 = D0.u8
			D0.u8 &= 0xf0
			if (D0.u8 != 0)
			{
				u8[A3] &= 0x0f
				D0.u8 += D3.u8
				u8[A3] |= D0.u8
			}

			D1.u8 &= 0x0f
			if (D1.u8 != 0)
			{
				u8[A3] &= 0xf0
				D1.u8 += D4.u8
				u8[A3] |= D1.u8
			}
		}
		++A3
		--D2.s16
	}

	D2.u16 = 0x7f
	while (D2.s16 >= 0)
	{
		D0.u8 = u8[(A1+=1)-1]
		if (D0.u8 != 0)
		{
			D1.u8 = D0.u8
			D0.u8 &= 0xf0
			if (D0.u8 != 0)
			{
				u8[A3] &= 0x0f
				if (D0.s8 >= 0)
				{
					D0.u8 += D3.u8
				}
				else
				{
					D0.u8 -= D5.u8
				}
				u8[A3] |= D0.u8
			}

			D1.u8 &= 0x0f
			if (D1.u8 != 0)
			{
				u8[A3] &= 0xf0
				if ((D1 & 0x08) == 0)
				{
					D1.u8 += D4.u8
				}
				else
				{
					D1.u8 -= D6.u8
				}
				u8[A3] |= D1.u8
			}
		}
		++A3
		--D2.s16
	}
}
