		"List":
		[
			{
				"InternalName": "FlightGravity",
				"DisplayName": "Flight Gravity",
				"Category": "Gameplay",
				"Variable": "option.tails.flight_gravity",	// This must be the name of a global variable in the scripts (not a define!)
				"DefaultValue": "0x08",
				"Options":
				{
					"0x02": "Reduced gravity",
					"0x08": "Normal gravity",
					"0x18": "High gravity"
				}
			},
			{
				"InternalName": "RequireSuper",
				"DisplayName": "Unlimited Flight",
				"Category": "Gameplay",
				"Variable": "option.require_super",
				"DefaultValue": "1",
				"Options":
				{
					"0": "Always",
					"1": "Super/Hyper only"
				}
			}
		]
	}
